# ===========================================
# PRODUCTION ENVIRONMENT
# ===========================================

# Django Core
DJANGO_SECRET_KEY=your-production-secret-key
DJANGO_DEBUG=False
HOSTING_STATUS=PRODUCTION

# Servers (set your live domains)
FRONTEND_SERVER=https://myapp.com
BACKEND_SERVER=https://api.myapp.com

# Database (Postgres for production)
#DATABASE_URL=sqlite:///db.sqlite3
DATABASE_URL=postgres://username:password@db.myapp.com:5432/myapp_db

# Binance API
BINANCE_TESTNET=False   # "False" means use Mainnet keys

# Testnet Keys (spare config if you ever want to switch)
BINANCE_TESTNET_API_KEY='<Your..API..Key>'
BINANCE_TESTNET_API_SECRET='<Your..Secret..API..Key>'

# Mainnet Keys
BINANCE_MAINNET_API_KEY=mainnet_api
BINANCE_MAINNET_API_SECRET=mainnet_api_secret
BINANCE_MAINNET_API_ACTIVATE_DATE=11:09:2025   # example date DD:MM:YYYY
BINANCE_MAINNET_API_EXPIRY_DATE=10:12:2025     # activation + 90 days default